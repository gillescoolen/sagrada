<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="chatBox" prefWidth="300" stylesheets="/styles/chat.css" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="sagrada.controller.ChatController">
    <ListView minHeight="200.0" maxHeight="720.0" prefWidth="200.0" fx:id="lvMessageBox">
        <!-- More messages will get added programmatically. -->
        <fx:include source="chatMessage.fxml"/>
    </ListView>
    <HBox>
        <TextField fx:id="messageField" prefHeight="20" prefWidth="240" styleClass="input"/>
        <Button fx:id="sendButton" prefHeight="20" prefWidth="60" styleClass="send-button" text="Send"/>
    </HBox>
</VBox>

            <!-- Split these to components -->
            <HBox>
                <Text text="Lobby 1"/>
            </HBox>
            <HBox>
                <Text text="Lobby 2"/>
            </HBox>
            <HBox>
                <Text text="Lobby 3"/>
            </HBox>
            <HBox>
                <Text text="Lobby 4"/>
            </HBox>
        </VBox>
    </VBox>
    <VBox styleClass="side-column" prefHeight="720.0" prefWidth="350.0">
        <Text styleClass="title" text="Global Chat"/>
    </VBox>
</HBox>


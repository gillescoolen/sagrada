<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<HBox xmlns="http://javafx.com/javafx/11.0.1"
      stylesheets="/styles/lobby.css"
      prefWidth="1200"
      prefHeight="720">

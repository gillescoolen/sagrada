<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.shape.Ellipse?>
<?import javafx.scene.shape.Rectangle?>
<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      stylesheets="/styles/postgame.css"
      styleClass="post-game-wrapper"
      prefWidth="1400" prefHeight="720">

    <!-- LEADERBOARD -->
    <VBox styleClass="leader-vbox" prefWidth="250" maxWidth="400">
        <Text styleClass="title" text="Game summary"/>
        <fx:include source="game/post-player.fxml"/>
    </VBox>

    <!-- CARDS -->
    <VBox styleClass="leader-vbox">
        <Text styleClass="title" text="Used Tool cards"/>
        <HBox styleClass="tool-card-hbox" prefWidth="200" maxWidth="400" maxHeight="400">
            <fx:include source="game/toolCard.fxml"/>
            <fx:include source="game/toolCard.fxml"/>
            <fx:include source="game/toolCard.fxml"/>
        </HBox>
        <Text styleClass="title" text="Used Public objective cards"/>
        <HBox styleClass="tool-card-hbox" prefWidth="200" maxWidth="400" maxHeight="400">
            <fx:include source="game/toolCard.fxml"/>
            <fx:include source="game/toolCard.fxml"/>
            <fx:include source="game/toolCard.fxml"/>
        </HBox>
    </VBox>

</HBox>

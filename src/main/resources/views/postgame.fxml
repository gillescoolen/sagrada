<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      stylesheets="/styles/postgame.css"
      styleClass="post-game-wrapper"
      alignment="TOP_CENTER"
      prefWidth="1400" prefHeight="720">

    <Text styleClass="title" text="Samenvatting"/>

    <!-- LEADERBOARD -->
    <HBox alignment="TOP_CENTER" styleClass="leader-vbox" maxHeight="100">
        <fx:include source="game/post-player.fxml"/>
        <fx:include source="game/post-player.fxml"/>
        <fx:include source="game/post-player.fxml"/>
    </HBox>

    <!-- CARDS -->
    <HBox styleClass="cards-vbox">
        <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
            <Text styleClass="small-title" text="Tool kaarten"/>
            <HBox alignment="CENTER" styleClass="cards-hbox-holder">
                <fx:include source="game/toolCard.fxml"/>
                <fx:include source="game/toolCard.fxml"/>
                <fx:include source="game/toolCard.fxml"/>
            </HBox>
        </VBox>
        <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
            <Text styleClass="small-title" text="Public objective kaarten"/>
            <HBox alignment="CENTER" styleClass="cards-hbox-holder">
                <fx:include source="game/toolCard.fxml"/>
                <fx:include source="game/toolCard.fxml"/>
                <fx:include source="game/toolCard.fxml"/>
            </HBox>
        </VBox>
    </HBox>
</VBox>

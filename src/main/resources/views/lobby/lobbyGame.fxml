<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="100.0" prefWidth="500.0" stylesheets="/styles/lobby/lobby-item.css" styleClass="item"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <HBox prefHeight="100.0" prefWidth="500.0" styleClass="hSpacer" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
            <Image fx:id="imgItemImage" url="/images/empty-profile.png"/>
        </ImageView>
        <VBox prefHeight="50.0" prefWidth="400.0" styleClass="vSpacer">
            <Label fx:id="lbName" styleClass="lobbyTitle"/>
            <Label fx:id="lbSpotsLeft"/>
        </VBox>
    </HBox>
</AnchorPane>

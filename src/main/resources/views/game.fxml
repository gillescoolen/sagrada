<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      stylesheets="/styles/game.css"
      styleClass="game-wrapper"
      prefWidth="1200" prefHeight="720"
      fx:controller="sagrada.controller.GameController">

    <!-- <fx:include source="game/gameUsers.fxml"/> -->
    <VBox styleClass="game-vbox" alignment="CENTER_RIGHT">

        <!-- Tool cards -->
        <Text styleClass="title-tool-cards">Tool Cards</Text>
        <HBox alignment="CENTER_RIGHT" styleClass="game-hbox">
            <fx:include source="game/toolCard.fxml"/>
            <fx:include source="game/toolCard.fxml"/>
            <fx:include source="game/toolCard.fxml"/>
        </HBox>

        <!-- Public Objective card -->
        <Text styleClass="title-tool-cards">Public Objective Card</Text>
        <HBox alignment="CENTER_RIGHT" styleClass="game-hbox">
            <fx:include source="game/publicObjectiveCard.fxml"/>
        </HBox>

        <!-- Private Objective card -->
        <Text styleClass="title-tool-cards">Private Objective Card</Text>
        <HBox alignment="CENTER_RIGHT" styleClass="game-hbox">
            <fx:include source="game/privateObjectiveCard.fxml"/>
        </HBox>
    </VBox>
</VBox>
